<?xml version="1.0"?>
<!-- source:http://wiki.ros.org/urdf/Tutorials -->
<robot name="two_link_manipulator">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>


  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.2"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="base_arm">
    <visual>
      <geometry>
        <box size="0.2 0.1 0.6"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_base_arm" type="fixed">
    <origin xyz="0 0 0.3"/>
    <parent link="base_link"/>
    <child link="base_arm"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="lower_arm">
    <visual>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_lower_arm" type="revolute">
    <parent link="base_arm"/>
    <child link="lower_arm"/>
    <!--
    <origin xyz="0 0.1 0.5"/>
    -->
    <origin xyz="0 0.1 0.5"/>

    <limit effort="1" velocity="1.0" lower="-1.57" upper="1.57"/>
    <axis xyz="0 1 0" />
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

<link name="upper_arm">
    <visual>
      <geometry>
        <box size="0.6 0.1 0.2"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

<joint name="base_to_upper_arm" type="revolute">
    <parent link="lower_arm"/>
    <child link="upper_arm"/>
    <axis xyz="0 1 0" />
    <origin xyz="0 -0.1 0.5"/>
    <limit effort="1" velocity="1.0" lower="-1.57" upper="1.57"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>
</robot>